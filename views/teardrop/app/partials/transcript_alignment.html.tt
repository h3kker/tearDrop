<div>
     <div class="row">
      <div class="col-md-12">
       <nvd3-line-chart data="transcript.alignment"
          y="getArg('mismatch_rate')"
          noData="Loading..."
          width="1000"
          height="200"
          showXAxis="true"
          showYAxis="true"
          forceX="[0, transcript.nsequence.length]"
          showLegend="true">
       </nvd3-line-chart>
      </div>
     </div>
     <div class="row">
      <div class="col-md-12">
       <nvd3-stacked-area-chart data="transcript.alignment"
          y="getArg('depth')"
          noData="Loading..."
