<div class="row">
 <div class="col-md-12">
  <h1>Gene {{gene.id}}</h1>
 </div>
</div>

<div class="row">
 <div class="col-md-6">
  <p><reviewed-description ng-model="gene"></p>
  <dl>
   <dt>Name</dt> <dd click-to-edit ng-model="gene.name" save-callback="saveGene"></dd>
   <dt>Description</dt> <dd click-to-edit ng-model="gene.description" save-callback="saveGene"></dd>
   <dt>Best Homolog</dt> <dd>{{gene.best_homolog || '-'}}</dd>
   <dt>Rating</dt> <dd><rating ng-model="gene.rating" max="10" ng-click="setRating(gene.rating)"></rating></dd>
   <dt>Reviewed</dt> <dd><input type="checkbox" ng-model="gene.reviewed" ng-change="saveGene()"></dd>
  </dl>
 </div>
 <div class="col-md-3">
  <h5>Tags</h5>
  <select multiple class="form-control input-sm" ng-model="selectedTags" ng-options="tag.tag for tag in tags"></select>
  <form class="form-inline" role="form">
   <input type="text" ng-model="newTag.tag" class="form-control input-sm" placeholder="Custom...">
   <select ng-model="newTag.level" class="form-control input-sm">
    <option value="info">Info</option>
    <option value="success">Good</option>
    <option value="warning">Not so good</option>
    <option value="danger">Bad!</option>
   </select>
  </form>
  <button class="btn btn-sm" ng-click="addTags(selectedTags)">Add</button>
 </div>
</div>

<div class="row">
 <div class="col-md-12">
  <span ng-repeat="tag in gene.tags" class="label" ng-class="'label-'+tag.level">{{tag.tag}} <i class="glyphicon glyphicon-remove" ng-click="removeTag(tag)"></i></span>
 </div>
</div>


<div class="row">
 <div class="col-md-12">
  <tabset>
   <tab> 
    <tab-heading>DE Results</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>DE Results</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      <span ng-if="gene.de_results">
       <div ui-grid="deGridOptions" class="grid"></div>
      </span>
      <span ng-hide="gene.de_results">
       <i>No DE analysis</i>
      </span>

     </div>
    </div>
   </tab>
   <tab select="loadHomologs()">
    <tab-heading>Homologs</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Homology Searches</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-4">
      <select multiple class="form-control" ng-model="selectedDbs" ng-options="db.description+' ('+db.status+')' for db in geneDbSources">
      </select>
     </div>
     <div class="col-md-1">
      <button class="btn" ng-click="runBlast(selectedDbs)" ng-disabled="selectedDbs.length==0">Run BLAST</button> 
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      <div ui-grid="blastGridOptions" class="grid-fw" ui-grid-selection></div>
     </div>
    </div>
   </tab>

   <tab>
    <tab-heading>Transcripts</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Transcripts
      <a role="button" class="btn btn-default btn-xs" href="[% config.base_uri %]/api/genes/{{gene.id}}/fasta">Get FASTA file</a>
      </h3>
     </div>
    </div>
    <div ng-if="gene.transcripts">
     <div class="row" ng-if="gene.transcripts.length>1">
      <div class="col-md-12">
       <accordion>
        <accordion-group open="loadTranscriptMsa()">
         <accordion-heading>Multiple Sequence Alignment</accordion-heading>
          <nvd3-stacked-area-chart data="transcriptMSA"
            noData="Inte Data"
            width="1000"
            height="200"
            showXAxis="true"
            showYAxis="true"
            showLegend="true"
            style="stack"
            showControls="true">
          </nvd3-stacked-area-chart>
        </accordion-group>
       </accordion>
      </div>
     </div>
     <div class="row" ng-repeat="transcript in gene.transcripts">
      <div class="col-md-12">
       <div class="panel panel-primary">
        <div class="panel-heading">
         <h3 class="panel-title">{{transcript.id}}</h3>
        </div>
        <div class="panel-body">
         <div class="row">
          <div class="col-md-12">
           <dl>
            <dt>Name</dt> <dd>{{transcript.name}}</dd>
            <dt>Organism</dt> <dd>{{transcript.organism.scientific_name}}</dd>
            <dt>Best Homolog</dt> <dd>{{transcript.best_homolog}}</dd>
           </dl>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <h4>Genome Mappings</h4>
           <ol>
            <li ng-repeat="map in transcript.transcript_mappings | orderBy:'match_ratio'">
             {{map.tid}} {{map.tstart | number}}-{{map.tend | number}} ({{map.match_ratio*100}}%)
            </li>
           </ol>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <h4>Sequence</h4>
           <pre>
&gt;{{transcript.id}}
{{transcript.nsequence}}
           </pre>
          </div>
         </div>
        </div>
       </div>
      </div>
     </div>
    </div>
   </tab>
   <tab>
    <tab-heading>Genome Alignments</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Genome Alignments</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      <accordion>
       <accordion-group ng-repeat="map in gene.mappings" open="loadGenomeAlignments(map)">
        <accordion-heading>
         {{map.tid}}: {{map.tstart | number}} - {{map.tend | number}}
        </accordion-heading>
         <div class="row">
          <div class="col-md-12">
           <nvd3-line-chart data="map.alignment"
              y="getArg('mismatch_rate')"
              width="1000"
              height="200"
              showXAxis="true"
              showYAxis="true"
              showLegend="true">
           </nvd3-line-chart>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <nvd3-stacked-area-chart data="map.alignment"
              y="getArg('depth')"
              noData="Inte Data"
              width="1000"
              height="600"
              showXAxis="true"
              showYAxis="true"
              showLegend="true"
              style="stack"
              showControls="true">
           </nvd3-stacked-area-chart>
          </div>
         </div>
       </accordion-group>
      </accordion>
      <!--
      Transcript: <select ng-model="genomeAlignments.viewTranscript" ng-options="transcript as transcript.id for transcript in gene.transcripts" ng-change="loadGenomeAlignments()"></select>
      -->
     </div>
    </div>
    <div>
    </div>
   </tab>
   <tab select="loadAlignments()">
    <tab-heading>Alignments</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Alignments</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      Transcript: <select ng-model="alignments.viewTranscript" ng-options="transcript as transcript.id for transcript in gene.transcripts" ng-change="loadAlignments()"></select>
     </div>
    </div>
    <div>
     <div class="row">
      <div class="col-md-12">
       <nvd3-line-chart data="alignments[alignments.viewTranscript.id]"
          y="getArg('mismatch_rate')"
          width="1000"
          height="200"
          showXAxis="true"
          showYAxis="true"
          forceX="[0, alignments.viewTranscript.nsequence.length]"
          showLegend="true">
       </nvd3-line-chart>
      </div>
     </div>
     <div class="row">
      <div class="col-md-12">
       <nvd3-stacked-area-chart data="alignments[alignments.viewTranscript.id]"
          y="getArg('depth')"
          noData="Inte Data"
          width="1000"
          height="600"
          showXAxis="true"
          showYAxis="true"
          showLegend="true"
          forceX="[0, alignments.viewTranscript.nsequence.length]"
          style="stack"
          showControls="true">
       </nvd3-stacked-area-chart>
      </div>
     </div>
    </div>
   </tab>
  </tabset>
 </div>
</div>
