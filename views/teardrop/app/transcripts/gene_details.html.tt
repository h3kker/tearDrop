<div class="row">
 <div class="col-md-12">
  <h1>Gene {{gene.id}}</h1>
 </div>
</div>

<div class="row">
 <div class="col-md-6">
  <p><reviewed-description ng-model="gene"></p>
  <dl>
   <dt>Name</dt> <dd click-to-edit ng-model="gene.name" save-callback="gene.save"></dd>
   <dt>Description</dt> <dd click-to-edit ng-model="gene.description" save-callback="gene.save"></dd>
   <dt>Best Homolog</dt> <dd>{{gene.best_homolog || '-'}}</dd>
   <dt>Organism(s)</dt> 
    <dd><span ng-if="gene.organism.length<2">{{gene.organism[0].scientific_name || '-'}}</span>
     <ul ng-if="gene.organism.length>1">
      <li ng-repeat="org in gene.organisms">{{org.scientific_name}} ({{org.count}} transcripts)
     </ul>
    </dd>
   <dt>Rating</dt> <dd><rating ng-model="gene.rating" max="10" ng-click="gene.setRating(gene.rating)"></rating></dd>
   <dt>Reviewed</dt> <dd><input type="checkbox" ng-model="gene.reviewed" ng-change="gene.save()"></dd>
  </dl>
 </div>
 <div class="col-md-3">
  <h5>Tags</h5>
  <select multiple class="form-control input-sm" ng-model="selectedTags" ng-options="tag.tag group by tag.category for tag in tags | orderBy:'tag'"></select>
  <form class="form-inline" role="form">
   <input type="text" ng-model="newTag.tag" class="form-control input-sm" placeholder="Custom...">
   <select ng-model="newTag.level" class="form-control input-sm">
    <option value="info">Info</option>
    <option value="success">Good</option>
    <option value="warning">Not so good</option>
    <option value="danger">Bad!</option>
   </select>
  </form>
  <button class="btn btn-sm" ng-click="gene.addTags(selectedTags, newTag)">Add</button>
 </div>
</div>

<div class="row" ng-if="gene.annotations.length">
 <div class="col-md-12">
  <h5>Annotations in Genomic Region</h5>
  <ol>
   <li ng-repeat="ann in gene.annotations | filter:{ 'annotation_type':'gene_model' } | orderBy:['contig', 'cstart']">
    {{ann.contig}} {{ann.cstart | number}} - {{ann.cend | number}} ({{ann.strand}}): {{ann.id}} <span ng-show="ann.annotation_link"><a href="{{ann.annotation_link}}">{{ann.name}}</a></span>
   </li>
  </ol>
 </div>
</div>

<div class="row">
 <div class="col-md-12">
  <span ng-repeat="tag in gene.tags" class="label" ng-class="'label-'+tag.level">{{tag.tag}} <i class="glyphicon glyphicon-remove" ng-click="gene.removeTag(tag)"></i></span>
 </div>
</div>


<div class="row">
 <div class="col-md-12">
  <tabset>
   <tab disabled="gene.de_results.length==0"> 
    <tab-heading>DE Results</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>DE Results</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      <span ng-if="gene.de_results">
       <div ui-grid="deGridOptions" class="grid"></div>
      </span>
      <span ng-hide="gene.de_results">
       <i>No DE analysis</i>
      </span>

     </div>
    </div>
   </tab>
   <tab>
    <tab-heading>Homologs</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Homology Searches</h3>
     </div>
    </div>
    <blast-grid ng-model="gene" grid-options="blastGridOptions"></blast-grid>
   </tab>

   <tab>
    <tab-heading>Transcripts</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Transcripts
      <a role="button" class="btn btn-default btn-xs" href="[% config.base_uri %]/api/genes/{{gene.id}}/fasta">Get FASTA file</a>
      </h3>
     </div>
    </div>
    <div ng-if="gene.transcripts">
     <div class="row" ng-if="gene.transcripts.length>1">
      <div class="col-md-12">
       <accordion>
        <accordion-group open="loadTranscriptMsa()">
         <accordion-heading>Multiple Sequence Alignment</accordion-heading>
          <nvd3-stacked-area-chart data="transcriptMSA"
            noData="Inte Data"
            width="1000"
            height="200"
            showXAxis="true"
            showYAxis="true"
            showLegend="true"
            style="stack"
            showControls="true">
          </nvd3-stacked-area-chart>
        </accordion-group>
       </accordion>
      </div>
     </div>
     <div class="row" ng-repeat="transcript in gene.transcripts">
      <div class="col-md-12">
       <div class="panel panel-primary">
        <div class="panel-heading">
         <h3 class="panel-title"><a href="#/transcripts/{{transcript.id}}">{{transcript.id}}</a></h3>
        </div>
        <div class="panel-body">
         <div class="row">
          <div class="col-md-12">
           <dl>
            <dt>Name</dt> <dd>{{transcript.name}}</dd>
            <dt>Organism</dt> <dd>{{transcript.organism.scientific_name}}</dd>
            <dt>Best Homolog</dt> <dd>{{transcript.best_homolog}}</dd>
           </dl>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <h4>Genome Mappings</h4>
           <ol>
            <li ng-repeat="map in transcript.transcript_mappings | orderBy:'match_ratio'">
             {{map.tid}} {{map.tstart | number}}-{{map.tend | number}} ({{map.match_ratio*100}}%)
            </li>
           </ol>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <h4>Sequence</h4>
           <pre>
&gt;{{transcript.id}}
{{transcript.nsequence}}
           </pre>
          </div>
         </div>
         <div class="row">
          <div class="col-md-12">
           <accordion>
            <accordion-group open="transcript.loadAlignment()">
             <accordion-heading>View Alignment</accordion-heading>
             <transcript-alignment transcript="transcript"></transcript-alignment>
            </accordion-group>
           </accordion>
          </div>
         </div>
        </div>
       </div>
      </div>
     </div>
    </div>
   </tab>
   <tab>
    <tab-heading>Genome Alignments</tab-heading>
    <div class="row">
     <div class="col-md-12">
      <h3>Genome Alignments</h3>
     </div>
    </div>
    <div class="row">
     <div class="col-md-12">
      <genome-alignments mappings="gene.mappings"></genome-alignments>
     </div>
    </div>
    <div>
    </div>
   </tab>
  </tabset>
 </div>
</div>
